<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"

    >

    <LinearLayout
        android:id="@+id/DefinirSenhaAcLinearLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="24dp"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"

        android:orientation="vertical"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/DefinirSenhaAcImageViewConfirmacao"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/add_24dp"
            android:layout_gravity="center"
            >

        </ImageView>


        <TextView
            android:id="@+id/DefinirSenhaAcTextViewMensagemExito"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sua senha foi redefinida com sucesso, clique abaixo para fazer o login."

            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="16sp"

            android:layout_marginTop="24dp"

            >
        </TextView>

        <Button
            android:id="@+id/DefinirSenhaAcButtonFazerLogin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nuc_fazer_login"

            android:backgroundTint="@color/medium_gray"
            android:elevation="8dp"

            android:layout_marginTop="24dp"

            android:layout_gravity="center"
            >
        </Button>





    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
