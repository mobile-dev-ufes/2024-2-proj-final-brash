<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nuc_editar_perfil_ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black">

    <ImageView
        android:id="@+id/EditarPerfilAcImageViewRetornar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/keyboard_return_24dp"
        app:tint="@color/lavender_purple"

        android:clickable="true"
        android:focusable="true"
        />


    <LinearLayout
        android:id="@+id/EditarPerfilAcLayoutIconePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditarPerfilAcImageViewRetornar"
        android:layout_marginTop="20dp">
        <include
            android:id="@+id/EditarPerfilAcIncludeIconePerfil"
            layout="@layout/layout_icone_perfil"
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/EditarPerfilAcLayoutCores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borda_linear_layout"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintEnd_toStartOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintTop_toTopOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintBottom_toBottomOf="@+id/EditarPerfilAcLayoutIconePerfil"

        app:layout_constraintVertical_bias="0.25"
        >
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewCor1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_background"
            app:tint="@color/lavender_purple"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewCor2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_background"
            app:tint="@color/soft_pink"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewCor3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_background"
            app:tint="@color/white"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewCor4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_background"
            app:tint="@color/hot_pink"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewCor5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/circle_background"
            app:tint="@color/leaf_green"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/EditarPerfilAcLayoutIcones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borda_linear_layout"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toEndOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintEnd_toEndOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintTop_toTopOf="@+id/EditarPerfilAcLayoutIconePerfil"
        app:layout_constraintBottom_toBottomOf="@+id/EditarPerfilAcLayoutIconePerfil"

        >
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewIcone1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfil_conta"
            app:tint="@color/deep_black"
            android:background="@color/lavender_purple"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewIcone2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfil_luz"
            app:tint="@color/deep_black"
            android:background="@color/lavender_purple"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewIcone3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfil_carro"
            app:tint="@color/deep_black"
            android:background="@color/lavender_purple"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />
        <ImageView
            android:id="@+id/EditarPerfilAcImageViewIcone4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/perfil_feliz"
            app:tint="@color/deep_black"
            android:background="@color/lavender_purple"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/EditarPerfilInputLayoutNomeDeExibicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/nuc_nome_de_exibicao"
        android:textSize="30sp"

        app:endIconMode="clear_text"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditarPerfilAcLayoutCores"

        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="1dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditarPerfilInputNomeDeExibicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="text"

            android:maxLines="1"
            android:ellipsize="end"

            android:textColorHint="@color/black"
            android:textColor="@color/black"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/EditarPerfilInputLayoutNomeDeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/nuc_nome_de_usuario"
        android:textSize="30sp"

        app:endIconMode="clear_text"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditarPerfilInputLayoutNomeDeExibicao"

        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="1dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditarPerfilInputNomeDeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="text"

            android:maxLines="1"
            android:ellipsize="end"

            android:textColorHint="@color/black"
            android:textColor="@color/black"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:text="@string/confirmar"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/bright_red"
        />



</androidx.constraintlayout.widget.ConstraintLayout>