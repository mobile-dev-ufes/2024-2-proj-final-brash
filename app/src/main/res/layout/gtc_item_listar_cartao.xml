<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gtc_pergunta_listar_card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:background="@drawable/card_pergunta_item"
        android:textColor="@color/white"
        android:text="@string/listar_cartao_exemplo_pergunta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>


    <TextView
        android:id="@+id/gtc_resposta_listar_card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:background="@drawable/card_resposta_item"
        android:textColor="@color/white"
        android:text="@string/listar_cartao_exemplo_pergunta"
        app:layout_constraintStart_toEndOf="@+id/gtc_pergunta_listar_card"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="1dp"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>