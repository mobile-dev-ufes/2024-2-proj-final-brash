<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"

    >

    <LinearLayout
        android:id="@+id/CadastrarFrFormCadastro"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

        <ImageView
            android:id="@+id/CadastrarContaAcImageViewExito"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/add_24dp"
            android:layout_gravity="center"
            >

        </ImageView>


        <TextView

            android:id="@+id/CadastrarContaAcTextViewMensagemExito"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"

            android:text="Sua conta foi criada com sucesso, um email foi enviado para confirmação em seu email."
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="16sp"

            >
        </TextView>

        <Button
            android:id="@+id/CadastrarContaAcButtonFazerLogin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fazer Login"

            android:layout_marginTop="24dp"

            android:backgroundTint="@color/medium_gray"

            android:layout_gravity="center"
            >
        </Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
