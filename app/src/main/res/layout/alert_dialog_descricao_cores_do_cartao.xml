<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/borda_linear_layout">

    <!-- Quantidade de Cart천es -->
    <TextView
        android:id="@+id/AlertDialogTextViewQuantidadeCartoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quantidades_cartoes"
        android:textColor="@color/white"
        app:drawableEndCompat="@drawable/circle_24dp"
        android:drawablePadding="10dp"
        app:drawableTint="@color/burnt_orange"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Cart천es Novos -->
    <TextView
        android:id="@+id/AlertDialogTextViewCartoesNovos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gtc_cartoes_novos"
        android:textColor="@color/white"
        app:drawableEndCompat="@drawable/circle_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        app:drawableTint="@color/vibrant_blue"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/AlertDialogTextViewQuantidadeCartoes"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Cart천es a Revisar -->
    <TextView
        android:id="@+id/AlertDialogTextViewCartoesRevisar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gtc_cartoes_a_revisar"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:drawableEndCompat="@drawable/circle_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        app:drawableTint="@color/bright_green"
        app:layout_constraintTop_toBottomOf="@id/AlertDialogTextViewCartoesNovos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        />

    <!-- Cart천es Esquecidos -->
    <TextView
        android:id="@+id/AlertDialogTextViewCartoesEsquecidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gtc_cartoes_esquecidos"
        app:drawableEndCompat="@drawable/circle_24dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:drawableTint="@color/bright_red"
        app:layout_constraintTop_toBottomOf="@id/AlertDialogTextViewCartoesRevisar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
