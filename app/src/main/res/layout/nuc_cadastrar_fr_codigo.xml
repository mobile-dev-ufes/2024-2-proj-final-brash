<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"

    >


    <LinearLayout
        android:id="@+id/CadastrarFrFormCadastro"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

        <ImageView
            android:id="@+id/CadastrarContaAcImageViewConfirmacaoCodigo"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/add_24dp"
            android:layout_gravity="center"
            >

        </ImageView>


        <TextView
            android:id="@+id/CadastrarContaAcTextViewMensagemEnvioCodigo"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"

            android:text="@string/nuc_mesagem_confirmacao_envio_email"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="16sp"

            >
        </TextView>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/CadastrarContaAcTextInputLayoutCodigoEmail"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/nuc_codigo"
            android:textColorHint="@color/soft_lilac"
            android:textSize="30sp"
            app:endIconMode="clear_text"

            android:layout_marginTop="24dp"

            app:boxStrokeWidth="1dp"
            app:boxBackgroundColor="@color/white"

            >

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/CadastrarContaAcTextInputEditTextCodigo"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                style="@style/EditTextMaxCharNome"
                />

            <Button

                android:id="@+id/CadastrarContaAcButtonVerificarCodigo"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nuc_verificar_codigo"

                android:layout_marginTop="24dp"

                android:backgroundTint="@color/medium_gray"

                android:layout_gravity="center"

                app:cornerRadius="8dp"
                >
            </Button>

            <TextView
                android:id="@+id/CadastrarContaAcTextViewMensagemErroCodigo"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp"

                android:text=""

                android:textColor="@color/bright_red"
                android:textSize="16sp"

                android:textAlignment="textStart"

                android:visibility="gone"

                >
            </TextView>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
