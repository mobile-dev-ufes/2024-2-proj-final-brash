<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/HomeFrOpcoesDeBusca"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/borda_linear_layout"
android:padding="16dp">

    <TextView
        android:id="@+id/HomeFrOpcoesDeBuscaTextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/configuracoes_de_busca"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="20dp"
        android:clickable="true"
        android:focusable="true"/>


    <TextView
        android:id="@+id/HomeFrOpcoesDeBuscaTextViewOrdenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ordenar_por"
        android:maxWidth="180dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeFrOpcoesDeBuscaTextViewTitle"/>

    <TextView
        android:id="@+id/HomeFrOpcoesDeBuscaTextViewFiltrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filtrar_por"
        android:maxWidth="180dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeFrOpcoesDeBuscaTextViewOrdenar"/>

    <Spinner
        android:id="@+id/HomeFrOpcoesDeBuscaSpinnerOrdenar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/HomeFrOpcoesDeBuscaTextViewOrdenar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/HomeFrOpcoesDeBuscaTextViewOrdenar"
        app:layout_constraintBottom_toBottomOf="@+id/HomeFrOpcoesDeBuscaTextViewOrdenar"
        android:textAlignment="viewStart"
        />

    <Spinner
        android:id="@+id/HomeFrOpcoesDeBuscaSpinnerFiltrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/HomeFrOpcoesDeBuscaTextViewFiltrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/HomeFrOpcoesDeBuscaTextViewFiltrar"
        app:layout_constraintBottom_toBottomOf="@+id/HomeFrOpcoesDeBuscaTextViewFiltrar"
        android:textAlignment="viewStart"
        />
    
    <Button
        android:id="@+id/HomeFrOpcoesDeBuscaButtonAplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aplicar"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="@color/medium_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeFrOpcoesDeBuscaSpinnerFiltrar"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="8dp"/>

    <Button
        android:id="@+id/HomeFrOpcoesDeBuscaButtonCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="@color/medium_gray"
        app:layout_constraintEnd_toStartOf="@+id/HomeFrOpcoesDeBuscaButtonAplicar"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>