<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado quando está selecionado -->
    <item android:state_checked="true">
        <layer-list>

            <!-- Borda branca -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent"/> <!-- Fundo transparente -->
                    <stroke android:width="1dp" android:color="@color/white"/> <!-- Borda branca -->
                    <size android:width="14dp" android:height="14dp"/> <!-- Tamanho da borda -->
                </shape>
            </item>

            <!-- Bolinha azul interna -->
            <item android:width="12dp" android:height="12dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/sky_blue"/> <!-- Bolinha azul -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Estado quando NÃO está selecionado -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Fundo transparente -->
            <stroke android:width="1dp" android:color="@color/white"/> <!-- Apenas borda branca -->
            <size android:width="14dp" android:height="14dp"/> <!-- Tamanho da borda -->
        </shape>
    </item>

</selector>
