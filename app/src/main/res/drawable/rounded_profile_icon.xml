<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Camada de fundo arredondado -->
    <item android:left="50dp" android:right="50dp"
        android:top="50dp" android:bottom="50dp">
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Camada SVG sobre o fundo arredondado -->
    <item android:right="0dp" android:left="0dp"
        android:top="0dp" android:bottom="0dp">
        <vector
            android:src="@drawable/perfil_conta"
        android:gravity="center" />
    </item>
</layer-list>
